            <section class="sidebar">
                <ul class="sidebar-menu">
                    <li class="header"></li>
                    @if (user.Role == "admin" || user.Role == "superadmin")
                    {
                        <li class="treeview">
                            <a href="@Url.Action("index","Admin")">
                                <i class="fa fa-refresh"></i> <span>สลับไปหน้าผู้ดูแลระบบ</span>
                            </a>
                        </li>
                    }
                    
                    <li class="treeview index">
