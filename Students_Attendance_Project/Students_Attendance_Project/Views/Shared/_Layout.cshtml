    <style>
        .table-scrollable {
            width: 100%;
            overflow-x: auto;
            overflow-y: hidden;
            border: 1px solid #e7ecf1;
            margin: 10px 0 !important;
        }

        .portlet.blue, .portlet.box.blue > .portlet-title, .portlet > .portlet-body.blue {
            background-color: #3598dc;
        }

        .portlet.box.blue {
            border: 1px solid #60aee4;
            border-top: 0;
        }

        .portlet > .portlet-title > .tools {
            float: right;
            display: inline-block;
            padding: 12px 0 8px;
        }

        a.collapse {
            background-image: url(asset/global/img/portlet-collapse-icon.png);
            width: 14px;
            visibility: visible;
        }

        a.reload {
            background-image: url(asset/global/img/portlet-reload-icon.png);
            width: 13px;
        }
    </style>
    <style>
        /*Input and Text Validate css*/
        .my-error-class {
            color: #ff5c33; /* red */
        }

        .my-valid-class {
            /*color: #00CC00;*/ /* green */
            border: 1px solid #33cc33;
            border-left: 3px solid #33cc33;
        }
        input.error, select.error, textarea.error{
            border: 1px solid #ff5c33;
            border-left: 3px solid #ff5c33;
        }
        input.valid, select.valid, textarea.valid{
            border: 1px solid #33cc33;
            border-left: 3px solid #33cc33;
        }
        label.error{
            padding-top: 5px;
            color: #ff5c33;
            font-size: 12px
        }
        .isGreen{
            color: #33cc33;
            font-size: 14px;
        }
        .isRed{
            color: #ff5c33;
            font-size: 16px;
        }
        div.isRed{
            font-size: 12px;
        }
        div.btn-file .valid{
            border: none;
        }
        div.btn-file .error{
            border: none;
        }
