                                                        {
                                                            for (int row = 0; row < 14; row++)
                                                            {
                                                                <td align="right">
                                                                    <table border="0" style="width: 100%">
                                                                        <tbody>
                                                                            <tr>
                                                                                <td align="Left">
                                                                                    <span id="">
                                                                                    </span>
                                                                                </td>
                                                                            </tr>
                                                                            <tr>
                                                                                <td align="Left">
                                                                                    <span id="">
                                                                                    </span>
                                                                                </td>
                                                                            </tr>
                                                                            <tr>
                                                                                <td align="Left">
                                                                                    <span id="">
                                                                                    </span>
                                                                                </td>
                                                                            </tr>
                                                                            <tr>
                                                                                <td align="Left">
                                                                                    <span id="">
                                                                                    </span>
                                                                                </td>
                                                                            </tr>
                                                                        </tbody>
                                                                    </table>
                                                                </td>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            var temp = 1;
                                                            var roudcount = 1;
                                                            foreach (var r in result)
                                                            {
                                                                for (int j = temp; j <= 15; j++)
                                                                {
                                                                    if (j == r.StartTimeInt)
                                                                    {
                                                                        <td class="active-period" align="center" colspan="@r.TotalHour" bgcolor="#d3efff">
                                                                            <table border="0" style="width: 100%">
                                                                                <tbody>
                                                                                    <tr>
                                                                                        <!-- คาบเรียน  -->
                                                                                        <td align="Left">
                                                                                            <span id="" style="font-family:Tahoma;font-size:12px;">
                                                                                                [@r.SubjectCode]<br>
                                                                                                วิชา @dataSubj.Where(x => x.SubjectCode == r.SubjectCode).Select(x => x.SubjectName).FirstOrDefault()<br>
                                                                                                กลุ่มเรียน @dataSubj.Where(x => x.StudyGroupID == r.StudyGroupID).Select(x => x.StudyGroupCode).FirstOrDefault()<br>
                                                                                                ห้อง @r.RoomNo <br>
