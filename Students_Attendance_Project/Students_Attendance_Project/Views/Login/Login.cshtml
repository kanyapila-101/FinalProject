    <style type="text/css">
        input.error {
            border: 1px solid #ff5c33;
            border-left: 3px solid #ff5c33;
        }

        input.valid {
            border: 1px solid #33cc33;
            border-left: 3px solid #33cc33;
        }

        label.error {
            padding-top: 5px;
            color: #ff5c33;
            /*font-size: 12px;*/
